[global]
  workgroup = MIYAZAKI
  server string = Miyazaki server
  hosts allow = 192.168.122. 127.
  log file = /var/log/samba/%m.log
  max log size = 50
  security = user
  bind interfaces only
  interfaces = 192.168.122.1/24 127.0.0.1/8
  dns proxy = no

[home]
  comment = home
  path = /home/{{ laptop_user }}
  valid users = {{ laptop_user }}
  public = no
  writable = yes
  printable = no
  create mask = 0765
